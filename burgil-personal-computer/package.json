{
	"name": "burgil-personal-computer",
	"productName": "Burgil Personal Computer",
	"description": "Burgil Personal Computer",
	"author": "Burgil",
	"private": true,
	"version": "0.0.0",
	"main": "out/src/index.js",
	"scripts": {
		"start": "bun hotreload/start.ts",
		"new-win": "bun utils/new-win.ts",
		"builder": "bun build:tailwind && bun build:typescript && electron-builder build",
		"build:typescript": "if [ -d out ]; then rm -r out; fi && tsc",
		"build:tailwind": "bunx tailwindcss -i ./tailwind.css -o ./out/tailwind.css",
		"build:tailwind:minify": "bunx tailwindcss -m -i ./tailwind.css -o ./out/tailwind.min.css"
	},
	"dependencies": { "@ricky0123/vad-web": "^0.0.19", "onnxruntime-web": "^1.19.2" },
	"devDependencies": {
		"@types/bun": "^1.1.12",
		"@types/node": "^22.8.2",
		"electron": "^32.2.2",
		"electron-builder": "^25.1.8",
		"tailwindcss": "^3.4.14",
		"typescript": "^5.6.3"
	},
	"build": {
		"files": [
			"out/**/*",
			"public/**/*.html",
			"public/**/*.css",
			"public/**/*.png",
			"logo/**/*"
		],
		"icon": "logo/logo.png",
		"win": {
			"icon": "logo/logo.ico"
		},
		"mac": {
			"icon": "logo/logo.icns"
		},
		"linux": {
			"icon": "logo/logo.png"
		},
		"nsis": {
			"oneClick": false,
			"perMachine": true,
			"allowToChangeInstallationDirectory": true,
			"uninstallDisplayName": "Uninstall Burgil Personal Computer",
			"artifactName": "BurgilPersonalComputer-Setup-${version}.${ext}"
		}
	}
}